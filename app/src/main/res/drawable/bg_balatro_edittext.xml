<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi được focus (người dùng đang nhập) -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Bóng đổ (nhạt hơn) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#000000"/> <!-- shadow màu be nhạt -->
                    <corners android:radius="8dp" />
                </shape>
            </item>

            <!-- Khung chính -->
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#2196F3"/>
                    <stroke android:width="2dp" android:color="#4E3A22" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <layer-list>
            <!-- Bóng đổ (đậm hơn) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#000000"/> <!-- shadow đậm -->
                    <corners android:radius="8dp" />
                </shape>
            </item>

            <!-- Khung chính -->
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#2196F3"/>
                    <stroke android:width="2dp" android:color="#3A2A12" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
